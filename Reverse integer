class Solution(object):
    def reverse(self, x):
        sign = 1
        if x < 0:
            sign = -1
            x = -x  # Make x positive

        reversed_str = str(x)[::-1]  # Reverse the digits
        reversed_int = sign * int(reversed_str)  # Add back the sign

        # Check if reversed_int fits in 32-bit signed int range
        if reversed_int < -2147483648 or reversed_int > 2147483647:
            return 0

        return reversed_int
